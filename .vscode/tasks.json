{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Betty: Style check current file",
      "type": "shell",
      "command": "${workspaceFolder}/Betty/betty-style.pl",
      "args": ["${file}"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "revealProblems": "onProblem"
      },
      "problemMatcher": []
    },
    {
      "label": "Format: clang-format current file",
      "type": "shell",
      "command": "clang-format",
      "args": ["-i", "${file}"],
      "presentation": {
        "echo": true,
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "Format+Betty: format then check",
      "type": "shell",
      "dependsOn": [
        "Format: clang-format current file",
        "Betty: Style check current file"
      ],
      "dependsOrder": "sequence",
      "command": "echo",
      "args": ["Format+Betty finished"],
      "presentation": {
        "echo": true,
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
